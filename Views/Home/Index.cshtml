@using FinanceTrackerApplication.Areas.Identity.Data
@using FinanceTrackerApplication.Models
@model FinanceTrackerApplicationUser

@{
    ViewData["Title"] = "Home Page";
}
    <div class="parkinsans m-0">
        <section id="HeroBanner" class="p-5" style="background-image:url(Images/Home/KoinBgBlur.jpg); height:100%; width:100%; background-size:cover; background-position:100%; background-repeat:no-repeat; background-position-x:30%; filter:blur();">
            <div class="col-12 d-flex align-content-center p-5 container">
                <div class="col-4 my-3">
                    <h1 class="display-1 fw-bold text-primary mb-2"> Koin </h1>
                    <h2 class="mb-5 fst-italic"> Smart Tracking for Smarter Spending</h2>
                    <ul class="fs-3 mb-5 mt-5">
                        <li class="text-primary fst-italic">Manage Accounts</li>
                        <li style="color:#bf595e;" class="text-tertiary fst-italic">Track Transactions</li>
                        <li class="text-quartinary fst-italic">View Spending Habits</li>
                    </ul>
                    <div class=" btn btn-primary fs-4 px-5 py-3">
                        Get Started
                    </div>
                </div>
            </div>
        </section>

        <section id="KeyFeatures" class="container-fluid mb-5 pb-5 bg-body">
            <h1 class="text-center display-2 pt-5 text-black fw-normal">Build Your Wealth</h1>
            <div class="container-fluid d-flex flex-wrap justify-content-around mt-5">
                <div style="border-radius: 1rem;" class="bg-secondary flex-grow-1 w-50 ms-5 me-4 mb-4 px-4 d-flex">
                    <div class="w-50 px-4 py-5 d-flex flex-column h-100">
                        <h2 class="mb-4 text-black">Budget Tracking</h2>
                        <h1 class="fs-2 text-black w-75 lh-sm fw-normal">Track your accounts and see where your money is going. All in one view</h1>
                        <div class="d-flex h-100">
                            <button style="align-self:flex-end" class="btn btn-primary fs-5 py-3 w-50">
                                Start Tracking
                            </button>
                        </div>
                    </div>
                    <div class="radius rounded-2 w-50 me-3 my-5">
                        <img class="img-fluid" style="border-radius:3px;" src="~/Images/Home/AccountList.png"/>
                    </div>
                </div>
                <div style="border-radius: 1rem;" class="bg-tertiary flex-grow-0 w-25 me-5 mb-4 px-3">
                    <div class="py-5 px-4 d-flex flex-column align-content-between h-100">
                        <h2 class="mb-4 text-black">Security</h2>
                        <h1 class="fs-2 mb-5 fw-normal text-black lh-sm">Secure login with account recovery features</h1>
                    </div>
                </div>
                <div style="border-radius: 1rem;" class="bg-white flex-grow-0 w-25 ms-5 me-4 mb-4 px-3">
                    <div class="py-5 px-4 d-flex flex-column align-content-between h-100">
                        <h2 class="mb-4 text-black">Reports (wip)</h2>
                        <h1 class="fs-2 mb-4 fw-normal text-black lh-small">View detailed charts of your data to understand your spending habits</h1>
                    </div>
                </div>
                <div style="border-radius: 1rem;" class="bg-primary flex-grow-1 w-50 me-5 mb-4 px-4 d-flex">
                    <div class="w-50 py-5 px-4 d-flex flex-column align-content-between h-100">
                        <h2 class="text-white mb-4">Transfer History</h2>
                        <h1 class="fs-2 w-75 lh-sm fw-normal text-light">Keep records and view detailed reports of your transfers to stay organized with your transactions</h1>
                    </div>
                    <div class="radius rounded-2 w-50 me-3 my-5 bg-black">
                        <img class="mw-100" src="~/Images/Home/AllTransactions.png"/>
                    </div>
                </div>
            </div>
        </section>

        <section id="Contact">
            <header class="text-center">
                <h1 class="display-4 fw-normal">Contact</h1>
                <p class="fs-2">Have any Questions? Just want to know more?</p>
            </header>
            <article class="d-flex justify-content-center">
                <div style="border-radius: 1rem;" class="border text-center m-3 p-5 w-25 bg-white">
                    <img src="./images/Home/LocationIcon.png" class="w-25">
                    <h1>Location</h1>
                    <p class="fs-3">Located in Manitoba, Canada</p>

                    @*TODO: Use Real Map*@
                    <aside>
                        <img src="./Images/Home/WPGmap.png" class="mt-3 w-50 img-fluid w-100">
                    </aside>
                </div>
                <div style="border-radius: 1rem;" class="border text-center m-3 p-5 w-25 bg-white">
                    <img src="./images/Home/ContactIcon.png" class="w-25">
                    <h1>Contact</h1>
                    <p class="fs-3">Reach Us Here!</p>
                    <p class="fs-3">Email: N/A <br /> Phone: N/A</p>
                </div>
                <div style="border-radius: 1rem;" class="border text-center m-3 p-5 w-25 bg-white">
                    <img src="./images/Home/SocialIcon.png" class="w-25">
                    <h1>Socials</h1>
                    <p class="fs-3">Check Out Out Socials!</p>
                    <ul class="fs-2 list-unstyled">
                        <a href="../Views/Home/Index.cshtml"><li>Instagram</li></a>
                        <a href="../Views/Home/Index.cshtml"><li>Github</li></a>
                        <a href="../Views/Home/Index.cshtml"><li>Twitter</li></a>
                    </ul>
                </div>
            </article>
        </section>

        <section id="HeroLanding" class="mt-5 bg-primary position-relative">
            @*SVG style2*@
            <div class="position-absolute flex-column d-flex justify-content-center w-100 h-100 mt-5">
                <h3 class="text-center text-black mb-3 text-white">You made it this far so lets get started</h3>
                <div class="align-self-center mt-3">
                    <a class="btn btn-secondary py-2 px-4 fs-5"  id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    <a class="btn btn-outline-secondary py-2 px-4 fs-5" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </div>
            </div>
            <svg viewBox="0 23 100 41" xmlns="http://www.w3.org/2000/svg">
                <path fill="transparent" id="curve" d="M0,60 Q10,60,18,50 Q50,10,82,50 Q90,60,100,60" />
                <text x="0">
                    <textPath style="font-size:0.15rem;" xlink:href="#curve">
                        <tspan dx="-0.5">Track Your Finances</tspan>
                        <tspan dx="1.5">Stay Organized</tspan>
                        <tspan dx="1.5">Grow Your Portfolio</tspan>
                        <tspan dx="1.5">Track your Finances</tspan>
                        <tspan dx="1.5">Stay Organized</tspan>
                        <tspan dx="1.5">Grow Your Wealth</tspan>
                        <tspan dx="1.5">Track Your Finances</tspan>
                        <tspan dx="1.5">Stay Organized</tspan>
                        <tspan dx="1.5">Grow Your Portfolio</tspan>
                    </textPath>
                </text>
            </svg>
        </section>
    </div>


@section Scripts{
    <script>
        $(document).ready(function(){
            setTimeout(function(){
                $('#message').fadeOut(1000);
            }, 5000);
        });
    </script>
}