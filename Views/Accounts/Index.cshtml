@model IEnumerable<FinanceTrackerApplication.Models.Account>

@{
    ViewData["Title"] = "Your Accounts";
}

<h1>Accounts List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
    @foreach (var item in Model.Where(a => a.IsAsset == true))
    {
        <div class="card text-success">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h3 class="card-text">@item.AccountType Account</h3>
                    <h4 class="card-title">Name: @item.Name</h4>
                </div>
                <div class="text-end">
                    <h3 class="float-end">Balance: $@item.Balance</h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }

    @foreach (var item in Model.Where(a => a.IsAsset == false))
    {
        <div class="card text-danger">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h3 class="card-text">@item.AccountType Account</h3>
                    <h4 class="card-title">Name: @item.Name</h4>
                </div>
                <div class="text-end">
                    <h3 class="float-end">Balance: $@item.Balance</h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
        </div> 
    }
